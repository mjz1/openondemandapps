#!/usr/bin/env bash

# Benchmark info
echo "TIMING - Starting main script at: $(date)"

# Set working directory to specified directory
cd "${HOME}"
cd <%= context.notebook_directory %>

#
# Start Jupyter Notebook Server
#

<%- unless context.modules.blank? -%>
# Purge the module environment to avoid conflicts
module purge

# Load the require modules
module load <%= context.modules %>

# List loaded modules
module list
<%- end -%>

# Benchmark info
echo "TIMING - Starting jupyter at: $(date)"

# Launch the Jupyter Notebook Server
set -x
<%- if context.conda_env.empty? -%>
<%= context.jupyter_binary %> --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
<%- else -%>
conda run -n <%= context.conda_env %> <%= context.jupyter_binary %> --config="${CONFIG_FILE}" <%= context.extra_jupyter_args %>
<%- end -%>
